.small.text-right.mt-1.font-weight-bold
  %div
    - if @event.komenca_horo == '00:00' && @event.fina_horo == '00:00'
      Komenca horo ne konata
    - else
      = icon('far', 'clock', "#{@event.komenca_horo} - #{@event.fina_horo}")
  %div
    = I18n.t @event.time_zone, scope: :timezones
    = icon('fas', 'sun', data: { toggle: 'tooltip', placement: 'top', title: 'Somera/Vintra tempo' }) if @event.dst?
