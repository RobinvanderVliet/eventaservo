.box-white.small
  .lead Äˆiuj eventoj
  .item-row-header
    .col Titolo
    .col Loko
    .col Dato
    .col Uzanto
    .col Lasta informo

  - @events.each do |event|
    - bg_color = (event.date_start < Time.zone.today) ? 'bg-color-gray' : nil
    = link_to event_path(event.code), class: "item-row #{bg_color}" do
      .col
        (#{icon('far', 'eye', event.impressionist_count)})

        = event.title
      .col= event.city
      .col= format_date event.date_start
      .col= event.user.name
      .col= format_date event.updated_at

