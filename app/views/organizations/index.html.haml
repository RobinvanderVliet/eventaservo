.box-white
  - if user_signed_in?
    %p= link_to icon('fas', 'plus-circle', 'Krei novan organizon'), new_organization_url, class: 'small fg-color-green'

  - unless params[:serchi].present?
    #vue-organizoj
      %partneroj
    %hr

  .es-list
    %h4.text-center ORGANIZOJ

    = form_tag organizations_url, method: :get, class: 'mb-3' do
      = text_field_tag :serchi, nil, class: 'form-control col-12', autofocus: true, placeholder: 'Serĉi organizon'

    - if params[:serchi].present?
      .row.col-12
        Serĉas:
        = link_to icon('fas', 'times', params[:serchi]), organizations_url, class: 'btn btn-sm btn-link'

    .es-list__headers.align-items-center
      .col-8.col-lg-10 Nomo
      .col-2.col-lg-1 Eventoj
      .col-2.col-lg-1 Membroj

    - @organizoj.each do |organizo|
      = render partial: 'organization_card', locals: { organizo: organizo }

  - if @organizoj.size.zero?
    .text-center
      Neniu rezulto

  - if defined? @pagy
    - if @pagy.try(:pages) > 1
      .d-flex.justify-content-center.small= raw pagy_bootstrap_nav(@pagy)
