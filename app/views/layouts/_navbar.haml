%nav.navbar.navbar-expand-lg.navbar-dark.bg-success
  %a.navbar-brand{href: root_url} Eventa Servo
  %button.navbar-toggler{'aria-controls' => 'navbarSupportedContent', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-target' => '#navbarSupportedContent', 'data-toggle' => 'collapse', :type => 'button'}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item= link_to 'Ĉefpaĝo', root_url, class: 'nav-link'

      %li.nav-item.dropdown
        %a#nova_eventa_menuo.nav-link.dropdown-toggle{'aria-expanded' => 'false', 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :href => '#', :role => 'button'}
          Aldoni eventon
        .dropdown-menu{'aria-labelledby' => 'nova_eventa_menuo'}
          = link_to 'Novan', new_event_path, class: 'dropdown-item'
          = link_to 'Importi', importi_eventon_url, class: 'dropdown-item'

      %li.nav-item= link_to 'Organizoj', organizations_url, class: 'nav-link'
      = render partial: 'layouts/admin' if user_signed_in? && current_user.admin?
    = render partial: 'layouts/uzanto'
